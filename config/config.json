{
    "system": {
        "name": "HFT System",
        "version": "1.0.0",
        "log_level": "INFO",
        "max_threads": 8,
        "memory_pool_size_mb": 512
    },
    "network": {
        "market_data_endpoint": "tcp://127.0.0.1:5555",
        "order_entry_endpoint": "tcp://127.0.0.1:5556",
        "timeout_ms": 5000,
        "buffer_size": 4096
    },
    "execution": {
        "default_route": "direct",
        "max_order_size": 10000,
        "min_order_size": 10,
        "order_lifetime_ms": 30000,
        "max_orders_per_second": 10,
        "price_threshold": 0.05
    },
    "risk": {
        "max_position": 50000,
        "max_daily_loss": 10000,
        "risk_check_interval_ms": 100,
        "max_value_at_risk": 5000
    },
    "strategy": {
        "default_strategy": "TrendFollowing",
        "parameter_update_interval_ms": 500
    },
    "pattern": {
        "model_path": "models/dnn_model.bin",
        "prediction_interval_ms": 200
    },
    "hardware": {
        "use_gpu": true,
        "use_fpga": false
    },
    "synchronization": {
        "gps_server": "ntp://time.nist.gov",
        "sync_interval_ms": 1000
    },
    "liquidity": {
        "evaluation_interval_ms": 50,
        "depth_levels": 5
    },
    "ai": {
        "model_path": "models/dnn_model.bin",
        "training_interval_ms": 3600000
    },
    "gui": {
        "update_interval_ms": 100
    }
}